<!DOCTYPE html>
<html>
  <head>
    <title>MaterializeSample</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'navbar', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'header' %>
    <div class="session-control-box">
    <% if signed_in? %>
      ユーザ名: <%= current_user.username %><br>
      <%= link_to 'ログアウトする', destroy_user_session_path, method: :delete %>
    <% end %>
    <div class="notice">
      <%= notice %>
    </div>
    <div class="alert">
      <%= alert %>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
