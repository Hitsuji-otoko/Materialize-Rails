<% @boards.each do |board| %>
    <div class="card medium">
      <div class="card-image waves-effect waves-block waves-light">
        <% image_num = board.id %>
        <% if board.id > 15 %>
          <% image_num = 1 %>
        <% end %>
        <%= image_tag("image#{image_num}.jpg", :class => "activator") %>
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4"><%= board.title %><i class="material-icons right">arrow_downward</i></span>
        <p>
        <a><%= link_to '詳細', board_path(board.id), class: 'waves-effect waves-teal btn-flat' %></a>
        <a><%= link_to '削除', board_path(board.id), class: 'waves-effect waves-teal btn-flat', method: :delete %></a>
        </p>
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4"><%= board.title  %><i class="material-icons right">close</i></span>
        <p><%= board.body %></p>
      </div>
  </div>
<% end %>